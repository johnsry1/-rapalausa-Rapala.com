<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19">
	<field formid="state" label="resource.state" type="string" mandatory="true" binding="stateCode" missing-error="address.state.missing" value-error="address.field.invalid">
		<options>
			<option optionid="" 	label="resource.selectastate" 		value=""/>
			<!-- regular US states -->
			<option optionid="AB" 	label="state.ca.Alberta" 		value="AB"/>>
			<option optionid="BC"	label="state.ca.BritishColumbia" 	value="BC"/>
			<option optionid="MB"	label="state.ca.Manitoba" 	value="MB"/>
			<option optionid="NB"	label="state.ca.NewBrunswick" 	value="NB"/>
			<option optionid="NL"	label="state.ca.NewfoundlandAndLabrador" 	value="NL"/>
			<option optionid="NT" 	label="state.ca.NorthwestTerritories" 		value="NT"/>
			<option optionid="NS" 	label="state.ca.NovaScotia" 			value="NS"/>
			<option optionid="NU" 	label="state.ca.Nunavut" 			value="NU"/>
			<option optionid="ON" 	label="state.ca.Ontario" 		value="ON"/>
			<option optionid="PE" 	label="state.ca.PrinceEdwardIsland" 		value="PE"/>
			<option optionid="QC" 	label="state.ca.Quebec" 	value="QC"/>
			<option optionid="SK" 	label="state.ca.Saskatchewan" 	value="SK"/>
			<option optionid="YT" 	label="state.ca.Yukon" 		value="YT"/>
			<!-- Other 
			<option optionid="OTHER" label="state.us.other" 				value="OTHER"/>
			-->
		</options>
	</field>
	
	
	<field formid="programs" label="program.program" type="string" mandatory="true" binding="stateCodeUS" missing-error="forms.address.state.missing" value-error="forms.address.field.invalid">
		<options>
			<!-- regular Programs states -->
			<option optionid="" 		label="forms.vipprogrames.select" 		value=""/>
			<option optionid="field" 	label="program.fieldstaff" 				value="field"/>
			<option optionid="guide" 	label="program.guide" 					value="guide"/>
			<option optionid="industry" label="program.industry" 				value="industry"/>
			<option optionid="sports" 	label="program.sports" 					value="sports"/>
			<option optionid="donation" label="program.donation" 				value="donation"/>
			<option optionid="decal" 	label="program.decal" 					value="decal"/>
		</options>
	</field>
	
	<field formid="brands" label="brands.brand" type="string" mandatory="true" binding="stateCodeUS" missing-error="forms.address.state.missing" value-error="forms.address.field.invalid">
		<options>
			<!-- regular brandss states -->
			<option optionid="default" 			label="brands.default" 				value=""/>
			<option optionid="BlueFox" 			label="brands.blueFox" 				value="BlueFox"/>
			<option optionid="ICEFORCE" 	   	label="brands.iceforce" 			value="ICEFORCE"/>
			<option optionid="LuhrJensen" 		label="brands.luhrJensen" 			value="LuhrJensen"/>
			<option optionid="Marcum" 	    	label="brands.marcum" 				value="Marcum"/>
			<option optionid="Rapala" 			label="brands.rapala" 				value="Rapala"/>
			<option optionid="Storm" 			label="brands.storm" 				value="Storm"/>
			<option optionid="StrikeMaster" 	label="brands.strikeMaster" 		value="StrikeMaster"/>
			<option optionid="Sufix" 			label="brands.sufix" 				value="Sufix"/>
			<option optionid="Terminator" 	    label="brands.terminator" 			value="Terminator"/>
			<option optionid="Triggerx" 		label="brands.triggerx" 			value="Triggerx"/>
			<option optionid="VMC" 				label="brands.vmc" 					value="VMC"/>
			<option optionid="Williamson" 		label="brands.williamson" 			value="Williamson"/>
		</options>	
	</field>
</form>
