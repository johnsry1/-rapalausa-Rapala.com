<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19">
	
	<field formid="firstname" label="contactus.firstname.label" type="string" mandatory="true" binding="firstName" max-length="50"/>
	<field formid="lastname" label="contactus.lastname.label" type="string" mandatory="true" binding="lastName" max-length="50"/>
	<field formid="email" label="contactus.email.label" type="string" mandatory="true" regexp="^[\w.%+-]+@[\w.-]+\.[\w]{2,6}$" parse-error="contactus.email.parse-error" binding="email" max-length="50"/>	
	<field formid="phone" label="contactus.phone.label" type="string" mandatory="false" binding="phoneHome" max-length="50"/>
	<field formid="ordernumber" label="contactus.ordernumber.label" type="string" mandatory="false" binding="orderNumber" missing-error="ordertrack.orderNumber.missing-error"/>
    <field formid="country" label="resource.country" type="string" mandatory="true" binding="countryCode" missing-error="address.country.missing" value-error="address.field.invalid">
		<options>
			<option optionid="CA" label="country.unitedstates" value="CA"/>
		</options>
	</field>
    <field formid="state" label="resource.state" type="string" mandatory="true" binding="stateCode" missing-error="address.state.missing" value-error="address.field.invalid">
		<options>
			<option optionid="" 	label="resource.selectastate" 		value=""/>
			<!-- regular US states -->
			<option optionid="AB" 	label="province.ca.Alberta" 		value="AB"/>>
			<option optionid="BC"	label="province.ca.BritishColumbia" 	value="BC"/>
			<option optionid="MB"	label="province.ca.Manitoba" 	value="MB"/>
			<option optionid="NB"	label="province.ca.NewBrunswick" 	value="NB"/>
			<option optionid="NL"	label="province.ca.NewfoundlandAndLabrador" 	value="NL"/>
			<option optionid="NT" 	label="province.ca.NorthwestTerritories" 		value="NT"/>
			<option optionid="NS" 	label="province.ca.NovaScotia" 			value="NS"/>
			<option optionid="NU" 	label="province.ca.Nunavut" 			value="NU"/>
			<option optionid="ON" 	label="province.ca.Ontario" 		value="ON"/>
			<option optionid="PE" 	label="province.ca.PrinceEdwardIsland" 		value="PE"/>
			<option optionid="QC" 	label="province.ca.Quebec" 	value="QC"/>
			<option optionid="SK" 	label="province.ca.Saskatchewan" 	value="SK"/>
			<option optionid="YT" 	label="province.ca.Yukon" 		value="YT"/>
			<!-- Other 
			<option optionid="OTHER" label="state.us.other" 				value="OTHER"/>
			-->
		</options>
	</field>
	<field formid="myquestion" label="contactus.myquestion.label" type="string" mandatory="false" binding="passwordQuestion">
		<options>
			<option optionid="General Information" value="General Information" label="contactus.generalinformation"/>
			<option optionid="Order Status" value="Order Status" label="contactus.orderstatus"/>
			<option optionid="My Account" value="My Account" label="contactus.myaccount"/>
			<option optionid="Other" value="Other" label="contactus.other"/>
		</options>	
	</field>
	<field formid="comment" label="contactus.comment" type="string" mandatory="false" binding="comment" max-length="250"/>

	<action formid="send" valid-form="false"/>
</form>
